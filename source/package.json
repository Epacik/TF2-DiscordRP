{
  "name": "tf2-discord-rpc",
  "version": "1.0.0",
  "description": "Discord RPC for Team Fortress 2",
  "main": "main.js",
  "author": "Damian KuÅ›mierz",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "build": "electron-builder --x64 --ia32",
    "dist": "build",
    "sass": "node-sass -o src/css/ src/sass/"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:Epat9/TF2-DiscordRP.git"
  },
  "homepage": "https://github.com/Epat9/TF2-DiscordRP",
  "keywords": [
    "Electron",
    "Discord",
    "RPC",
    "Team Fortress 2"
  ],
  "license": "MIT",
  "dependencies": {
    "discord-rpc": "./RPC",
    "discord.js": "file:discord.js",
    "electron-settings": "^3.2.0",
    "jquery": "^3.3.1",
    "jsdom": "^11.10.0",
    "ps-node": "~0.1.6",
    "request": "~2.87.0"
  },
  "devDependencies": {
    "electron": ">=2.0.8",
    "electron-builder": "^20.38.4",
    "node-sass": "^4.9.0"
  },
  "build": {
    "appId": "com.epat.tf2RPC",
    "productName": "TF2 Rich Presence",
    "win": {
      "target": "nsis",
      "icon": "./build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "snap"
      ],
      "icon": "./build/icon.png"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "unicode": true
    }
  },
  "bugs": {
    "url": "https://github.com/Epat9/TF2-DiscordRP/issues"
  }
}
